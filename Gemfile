source 'https://rubygems.org'

ruby '~> 3.0'

# Web framework
gem 'sinatra', '~> 3.0'
gem 'sinatra-contrib', '~> 3.0'

# Database
gem 'mysql2', '~> 0.5'
gem 'sequel', '~> 5.0'

# JSON handling
gem 'json', '~> 2.6'

# HTTP client for API calls
gem 'httparty', '~> 0.21'

# Configuration management
gem 'dotenv', '~> 2.8'

# Logging
gem 'logger', '~> 1.5'

# File system operations
gem 'fileutils', '~> 1.7'

# Process management
gem 'open3', '~> 0.1'

# Development and testing
group :development, :test do
  gem 'rspec', '~> 3.12'
  gem 'rack-test', '~> 2.1'
  gem 'pry', '~> 0.14'
end

# Production server
group :production do
  gem 'puma', '~> 6.0'
end
